@inherits LayoutComponentBase
@using MudBlazor

<!-- MudBlazor Provider für Theme, Popover, Dialog und Snackbar -->
<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<!-- Hauptlayout -->
<MudLayout>

    <!-- Optional: AppBar -->
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5">Consulat Termine</MudText>
    </MudAppBar>

    <!-- Optional: Sidebar/Drawer mit Navigation -->
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="1">
        <NavMenu />
    </MudDrawer>

    <!-- Hauptinhalt -->
    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>

</MudLayout>
