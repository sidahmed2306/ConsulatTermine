@page "/admin/assignments"

@using ConsulatTermine.Domain.Enums
@using MudBlazor
@using ConsulatTermine.Application.Interfaces
@using ConsulatTermine.Domain.Entities
@using ConsulatTermine.UI.Authentication

@inject IEmployeeAssignmentService AssignmentService
@inject IEmployeeService EmployeeService
@inject IServiceService ServiceService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject EmployeeSessionService EmployeeSession
@inject NavigationManager Navigation

<MudPaper Class="pa-4">
    <MudStack Spacing="3">

        <MudText Typo="Typo.h5">Mitarbeiter & Services</MudText>

        <!-- Assignment Übersicht -->
        <MudTable Items="_assignments" Hover Dense>
            <HeaderContent>
                <MudTh>Mitarbeiter</MudTh>
                <MudTh>Service</MudTh>
                <MudTh>Aktionen</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd>
                    @(context.Employee == null
                        ? "N/A"
                        : $"{context.Employee.FirstName} {context.Employee.LastName}")
                </MudTd>

                <MudTd>@(context.Service?.Name ?? "N/A")</MudTd>

                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error"
                                   OnClick="@(() => ConfirmDeleteAssignment(context))" />
                </MudTd>
            </RowTemplate>
        </MudTable>

        <!-- Neue Zuordnung -->
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h6">Neue Zuordnung</MudText>

            <MudStack Spacing="2">

                <MudSelect T="int" Label="Mitarbeiter" @bind-Value="_selectedEmployee">
                    @foreach (var e in _employees)
                    {
                        <MudSelectItem Value="@e.Id">
                            @($"{e.FirstName} {e.LastName}")
                        </MudSelectItem>
                    }
                </MudSelect>

                <MudSelect T="int" Label="Service" @bind-Value="_selectedService">
                    @foreach (var s in _services)
                    {
                        <MudSelectItem Value="@s.Id">@s.Name</MudSelectItem>
                    }
                </MudSelect>

                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           OnClick="AddAssignment">
                    Hinzufügen
                </MudButton>

            </MudStack>
        </MudPaper>

    </MudStack>
</MudPaper>

@code {

    private List<EmployeeServiceAssignment> _assignments = new();
    private List<Employee> _employees = new();
    private List<Service> _services = new();

    private int _selectedEmployee;
    private int _selectedService;

    private int _currentEmployeeId;

    // -------------------------------------------------
    // LOGIN-GUARD
    // -------------------------------------------------
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
            return;

        var auth = await EmployeeSession.EnsureAuthenticatedAsync();
        if (!auth.IsAuthenticated)
        {
            Navigation.NavigateTo("/employee/login", true);
            return;
        }

        _currentEmployeeId = auth.EmployeeId;

        var role = EmployeeSession.CurrentRole;
        if (role != EmployeeRole.ServiceChef && role != EmployeeRole.Admin)
        {
            Navigation.NavigateTo("/employee/home", true);
            return;
        }

        await LoadDataAsync();
        StateHasChanged();
    }

    // -------------------------------------------------
    // DATA LOAD
    // -------------------------------------------------
    private async Task LoadDataAsync()
    {
        // Services
        if (EmployeeSession.CurrentRole == EmployeeRole.Admin)
            _services = await ServiceService.GetAllServicesAsync();
        else
            _services = await ServiceService.GetServicesForEmployeeAsync(_currentEmployeeId);

        // Assignments
        var allAssignments = await AssignmentService.GetAllAssignmentsAsync();

        if (EmployeeSession.CurrentRole == EmployeeRole.Admin)
        {
            _assignments = allAssignments;
        }
        else
        {
            var allowedServiceIds = _services.Select(s => s.Id).ToHashSet();
            _assignments = allAssignments
                .Where(a => allowedServiceIds.Contains(a.ServiceId))
                .ToList();
        }

        // Employees
        var allEmployees = await EmployeeService.GetAllEmployeesAsync();

        if (EmployeeSession.CurrentRole == EmployeeRole.Admin)
        {
            _employees = allEmployees;
        }
        else
        {
            var allowedServiceIds = _services.Select(s => s.Id).ToHashSet();

            _employees = allEmployees
                .Where(e =>
                    !e.AssignedServices.Any() ||
                    e.AssignedServices.Any(a => allowedServiceIds.Contains(a.ServiceId)))
                .ToList();
        }
    }

    // -------------------------------------------------
    // ADD
    // -------------------------------------------------
    private async Task AddAssignment()
    {
        if (_selectedEmployee == 0 || _selectedService == 0)
        {
            Snackbar.Add("Bitte Mitarbeiter und Service wählen.", Severity.Warning);
            return;
        }

        try
        {
            var ok = await AssignmentService.AddAssignmentAsync(_selectedEmployee, _selectedService);

            if (ok)
            {
                Snackbar.Add("✅ Zuordnung erfolgreich hinzugefügt.", Severity.Success);
                await LoadDataAsync();
            }
            else
            {
                Snackbar.Add("ℹ️ Diese Zuordnung existiert bereits.", Severity.Warning);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"❌ Fehler beim Hinzufügen der Zuordnung: {ex.Message}", Severity.Error);
        }
    }

    // -------------------------------------------------
    // DELETE
    // -------------------------------------------------
    private async Task ConfirmDeleteAssignment(EmployeeServiceAssignment assignment)
    {
        var parameters = new DialogParameters
        {
            ["Title"] = "Zuweisung löschen",
            ["Message"] =
                $"Möchtest du die Zuweisung " +
                $"**{assignment.Employee?.FirstName} {assignment.Employee?.LastName}** → " +
                $"**{assignment.Service?.Name}** wirklich löschen?"
        };

        var dialog = await DialogService.ShowAsync<ConfirmDeleteDialog>(
            "Bestätigung",
            parameters);

        var result = await dialog.Result;

        if (result is { Canceled: false })
        {
            await DeleteAssignment(assignment);
        }
    }

    private async Task DeleteAssignment(EmployeeServiceAssignment a)
    {
        try
        {
            var ok = await AssignmentService.RemoveAssignmentAsync(a.EmployeeId, a.ServiceId);

            if (ok)
            {
                Snackbar.Add("✅ Zuordnung erfolgreich gelöscht.", Severity.Success);
                await LoadDataAsync();
            }
            else
            {
                Snackbar.Add("ℹ️ Zuordnung wurde nicht gefunden.", Severity.Warning);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"❌ Fehler beim Löschen der Zuordnung: {ex.Message}", Severity.Error);
        }
    }
}
