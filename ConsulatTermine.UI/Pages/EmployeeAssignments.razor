@page "/admin/assignments"

@using ConsulatTermine.Domain.Enums
@using MudBlazor
@using ConsulatTermine.Application.Interfaces
@using ConsulatTermine.Domain.Entities
@using ConsulatTermine.UI.Authentication

@inject IEmployeeAssignmentService AssignmentService
@inject IEmployeeService EmployeeService
@inject IServiceService ServiceService
@inject ISnackbar Snackbar

@inject EmployeeSessionService EmployeeSession
@inject NavigationManager Navigation

<MudPaper Class="pa-4">
    <MudStack Spacing="3">

        <MudText Typo="Typo.h5">Mitarbeiter & Services</MudText>

        <!-- Assignment Tabelle -->
        <MudTable Items="_assignments" Hover Dense>

            <HeaderContent>
                <MudTh>Mitarbeiter</MudTh>
                <MudTh>Service</MudTh>
                <MudTh>Aktionen</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd>
                    @(context.Employee == null
                        ? "N/A"
                        : $"{context.Employee.FirstName} {context.Employee.LastName}")
                </MudTd>

                <MudTd>@(context.Service?.Name ?? "N/A")</MudTd>

                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error"
                                   OnClick="@(() => DeleteAssignment(context))" />
                </MudTd>
            </RowTemplate>

        </MudTable>

        <!-- Neue Zuordnung -->
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h6">Neue Zuordnung</MudText>

            <MudStack Spacing="2">

                <MudSelect T="int" Label="Mitarbeiter" @bind-Value="_selectedEmployee">
                    @foreach (var e in _employees)
                    {
                        <MudSelectItem Value="@e.Id">
                            @($"{e.FirstName} {e.LastName}")
                        </MudSelectItem>
                    }
                </MudSelect>

                <MudSelect T="int" Label="Service" @bind-Value="_selectedService">
                    @foreach (var s in _services)
                    {
                        <MudSelectItem Value="@s.Id">@s.Name</MudSelectItem>
                    }
                </MudSelect>

                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           OnClick="AddAssignment">
                    Hinzufügen
                </MudButton>

            </MudStack>
        </MudPaper>

    </MudStack>
</MudPaper>

@code {
    private List<EmployeeServiceAssignment> _assignments = new();
    private List<Employee> _employees = new();
    private List<Service> _services = new();

    private int _selectedEmployee;
    private int _selectedService;



 // -------------------------------------------------
    // LOGIN-GUARD (Admin Assignments)
    // -------------------------------------------------
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
            return;

        var auth = await EmployeeSession.EnsureAuthenticatedAsync();
        if (!auth.IsAuthenticated)
        {
            Navigation.NavigateTo("/employee/login", true);
            return;
        }

        var role = EmployeeSession.CurrentRole;
        if (role != EmployeeRole.ServiceChef && role != EmployeeRole.Admin)
        {
            Navigation.NavigateTo("/employee/home", true);
            return;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        _employees = await EmployeeService.GetAllEmployeesAsync();
        _services = await ServiceService.GetAllServicesAsync();
        _assignments = await AssignmentService.GetAllAssignmentsAsync();
    }

    private async Task AddAssignment()
    {
        if (_selectedEmployee == 0 || _selectedService == 0)
        {
            Snackbar.Add("Bitte Mitarbeiter und Service wählen.", Severity.Warning);
            return;
        }

        await AssignmentService.AddAssignmentAsync(_selectedEmployee, _selectedService);
        _assignments = await AssignmentService.GetAllAssignmentsAsync();
    }

    private async Task DeleteAssignment(EmployeeServiceAssignment a)
    {
        await AssignmentService.RemoveAssignmentAsync(a.EmployeeId, a.ServiceId);
        _assignments = await AssignmentService.GetAllAssignmentsAsync();
    }
}
